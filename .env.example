# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000
BASE_URL=http://localhost:3000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL Connection
DB_HOST=db
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-secure-password-here
DB_DATABASE=aparat_db

# Alternative: Full connection string (used by TypeORM)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:your-secure-password-here@db:5432/aparat_db

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# SECURITY
# ============================================
# Bcrypt rounds (10-12 recommended, higher = more secure but slower)
BCRYPT_ROUNDS=10

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# ============================================
# API DOCUMENTATION (SWAGGER)
# ============================================
SWAGGER_ENABLED=true
SWAGGER_PATH=api-docs
SWAGGER_TITLE=Integration Modul Aparat API
SWAGGER_DESCRIPTION=API documentation for Aparat, Ekspedisi, and Surat modules
SWAGGER_VERSION=1.0

# ============================================
# API KEYS (Inter-Module Communication)
# ============================================
# Main API Key for internal services
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
API_KEY=your-api-key-for-internal-services-minimum-32-characters

# Module-specific API Keys (Sprint 2+)
API_KEY_AGENDA=your-agenda-module-api-key
API_KEY_EKSPEDISI=your-ekspedisi-module-api-key
API_KEY_SURAT=your-surat-module-api-key

# ============================================
# FILE UPLOAD
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=2097152
ALLOWED_FILE_TYPES=.png,.jpg,.jpeg,.pdf